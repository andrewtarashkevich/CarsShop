@model LoginViewModel

@{
    ViewBag.Title = "Auth";
}

<div class="col-md-12">
    @using (Html.BeginForm("Login", "Authentication", FormMethod.Post))
    {
        <div class="col-md-12">
            Username:
        </div>
        <div class="col-md-12">
            @Html.TextBoxFor(model => model.UserName)
        </div>

        <div class="col-md-12">
            <input type="submit" value="Submit" />
        </div>
    }
</div>